{
	"python.jediEnabled": true,
	"python.formatting.provider": "autopep8",
	"python.workspaceSymbols.ctagsPath": "/usr/bin/ctags", 
	"codeLens.enable": false,
	"languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
